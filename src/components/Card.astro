---
interface Props {
	title: string;
	body: string;
	href: string;
	img_src: string;
}

const { href, title, body, img_src } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
		<div class="justify-content-inside">
			<img src={img_src} width="200" height="200" alt="">
		</div>
		<p class="justify-content-inside">
			{body}
		</p>
	</a>
</li>
<style>
	.justify-content-inside {
		margin: auto;
		display: flex;
		justify-content: space-around;
	}

	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #ffffff;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		justify-content: center;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: auto;
		display: flex;
		justify-content: space-around;
		font-size: 1.3rem;
		font-family: monospace;
		font-weight: 900;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		font-size: 1rem;
		font-family: monospace;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
